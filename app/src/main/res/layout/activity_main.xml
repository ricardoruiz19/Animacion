<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ricardoruiz.animacion.MainActivity"
    android:weightSum="1">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"-->


    <ImageView
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:id="@+id/image_logo"
        android:background="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.26" />

    <EditText android:text="@string/hello_word" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/text_title"
        android:paddingTop="20dp"
        android:textSize="25dp"
        android:paddingBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Girar"
        android:id="@+id/button_girar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mover"
        android:id="@+id/button_mover" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ampliar"
        android:id="@+id/button_ampliar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transparencia"
        android:id="@+id/button_trans" />


</LinearLayout>
